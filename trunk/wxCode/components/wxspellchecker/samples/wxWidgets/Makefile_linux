ifneq (,$(findstring Release, $(CFG)))
  override CFG = Release
else
  override CFG = Debug
endif

PROJECT = wxSpellCheckerDemo
CC = g++

ifeq ($(CFG),Debug)
  OBJ_DIR = Debug
  OUTPUT_DIR = ../../bin
  TARGET = wxSpellCheckerDemod
  C_INCLUDE_DIRS = -I"../../include" -I"../.." 
  C_PREPROC = 
  CFLAGS = -pipe `${WXSTABLE}/bin/wxgtkd-2.4-config --cxxflags` -Wall -g2 -O0 -fno-rtti -fno-exceptions 
  LIB_DIRS = 
  LIBS = 
  LDFLAGS = -pipe ../../lib/libwx_spellcheckd.a ../../lib/libmyspelld.a ${WXSTABLE}/lib/libwx_gtkd_xrc-2.4.a `${WXSTABLE}/bin/wxgtkd-2.4-config --libs`
endif

ifeq ($(CFG),Release)
  OBJ_DIR = Release
  OUTPUT_DIR = ../../bin
  TARGET = wxSpellCheckerDemo
  C_INCLUDE_DIRS = -I"../../include" -I"../.." 
  C_PREPROC = 
  CFLAGS = -pipe `${WXSTABLE}/bin/wxgtk-2.4-config --cxxflags` -Wall -g0 -O2 -fno-rtti -fno-exceptions 
  LIB_DIRS = 
  LIBS = 
  LDFLAGS = -pipe -s ../../lib/libwx_spellcheck.a ../../lib/libmyspell.a ${WXSTABLE}/lib/libwx_gtk_xrc-2.4.a `${WXSTABLE}/bin/wxgtk-2.4-config --libs`
endif

SRC_OBJS = \
  $(OBJ_DIR)/wxSpellCheckerDemo.o	\
  $(OBJ_DIR)/MySpellCheckDialog.o

define build_target
@echo Linking...
@$(CC) -o "$(OUTPUT_DIR)/$(TARGET)" $(SRC_OBJS) $(LIB_DIRS) $(LIBS) $(LDFLAGS)
endef

define compile_source
@echo Compiling $<
@$(CC) $(CFLAGS) $(C_PREPROC) $(C_INCLUDE_DIRS) -c "$<" -o "$@"
endef

.PHONY: print_header directories

$(TARGET): print_header directories $(SRC_OBJS)
	$(build_target)

.PHONY: clean cleanall

cleanall:
	@echo Deleting intermediate files for 'wxSpellCheckerDemo - $(CFG)'
	-@rm -rf "$(OBJ_DIR)"
	-@rm -rf "$(OUTPUT_DIR)/$(TARGET)"
	-@rmdir "$(OUTPUT_DIR)"

clean:
	@echo Deleting intermediate files for 'wxSpellCheckerDemo - $(CFG)'
	-@rm -rf $(OBJ_DIR)

print_header:
	@echo ----------Configuration: wxSpellCheckerDemo - $(CFG)----------

directories:
	-@if [ ! -d "$(OUTPUT_DIR)" ]; then mkdir "$(OUTPUT_DIR)"; fi
	-@if [ ! -d "$(OBJ_DIR)" ]; then mkdir "$(OBJ_DIR)"; fi

$(OBJ_DIR)/wxSpellCheckerDemo.o: wxSpellCheckerDemo.cpp	\
mondrian.xpm	\
wxSpellCheckerDemo.h	\
MySpellCheckDialog.h
	$(compile_source)

$(OBJ_DIR)/MySpellCheckDialog.o: MySpellCheckDialog.cpp	\
MySpellCheckDialog.h	\
resource.h
	$(compile_source)



