#
# Makefile : Builds wxSpellChecker for Linux.
#

SPELLCHECKER_SUBDIRS=MySpell src samples/wxWidgets tools/bzipstream tools
MAKEFILE=Makefile_linux

all:
	@for d in $(SPELLCHECKER_SUBDIRS); do (cd $$d && $(MAKE) -f $(MAKEFILE) CFG=Debug); done
	@for d in $(SPELLCHECKER_SUBDIRS); do (cd $$d && $(MAKE) -f $(MAKEFILE) CFG=Release); done

clean:
	@for d in $(SPELLCHECKER_SUBDIRS); do (cd $$d && $(MAKE) -f $(MAKEFILE) CFG=Debug clean); done
	@for d in $(SPELLCHECKER_SUBDIRS); do (cd $$d && $(MAKE) -f $(MAKEFILE) CFG=Release clean); done
  
debug:
	@for d in $(SPELLCHECKER_SUBDIRS); do (cd $$d && $(MAKE) -f $(MAKEFILE) CFG=Debug); done

release:
	@for d in $(SPELLCHECKER_SUBDIRS); do (cd $$d && $(MAKE) -f $(MAKEFILE) CFG=Release); done

