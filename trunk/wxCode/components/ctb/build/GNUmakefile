	$(CXX) -c -o $@ $(WXCTB_DLL_CXXFLAGS) $(CPPDEPS) $<

$(OUTPUT)/wxctb_dll_getopt.o: ./../src/getopt.cpp
	$(CXX) -c -o $@ $(WXCTB_DLL_CXXFLAGS) $(CPPDEPS) $<

$(OUTPUT)/wxctb_dll_iobase.o: ./../src/iobase.cpp
	$(CXX) -c -o $@ $(WXCTB_DLL_CXXFLAGS) $(CPPDEPS) $<

$(OUTPUT)/wxctb_dll_serport.o: ./../src/linux/serport.cpp
	$(CXX) -c -o $@ $(WXCTB_DLL_CXXFLAGS) $(CPPDEPS) $<

$(OUTPUT)/wxctb_dll_timer.o: ./../src/linux/timer.cpp
	$(CXX) -c -o $@ $(WXCTB_DLL_CXXFLAGS) $(CPPDEPS) $<

$(OUTPUT)/wxctb_dll_gpib.o: ./../src/gpib.cpp
	$(CXX) -c -o $@ $(WXCTB_DLL_CXXFLAGS) $(CPPDEPS) $<

$(OUTPUT)/ctbtest_ctbtest.o: ./../samples/ctbtest.cpp
	$(CXX) -c -o $@ $(CTBTEST_CXXFLAGS) $(CPPDEPS) $<

