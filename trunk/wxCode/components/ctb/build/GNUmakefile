all: $(OUTPUT)
$(OUTPUT):
	@mkdir -p $(OUTPUT)

### Targets: ###

all: ../lib/libwxctb$(LIBFLAG)$(GPIBFLAG)-0.13.a ../lib/libwxctb$(LIBFLAG)$(GPIBFLAG)-0.13.so $(OUTPUT)/ctbtest tip-linux

install: install_wxctb_lib install_wxctb_dll
	$(INSTALL) -d $(DESTDIR)$(prefix)/include/wx/ctb-0.13
	for f in fifo.h getopt.h $(GPIBINC) iobase.h linux/serport.h linux/timer.h serport.h serportx.h timer.h; do \
	if test ! -d $(DESTDIR)$(prefix)/include/wx/ctb-0.13/`dirname $$f` ; then \
	$(INSTALL) -d $(DESTDIR)$(prefix)/include/wx/ctb-0.13/`dirname $$f`; \
	fi; \
	$(INSTALL) -m 644 ../include/wx/ctb-0.13/$$f $(DESTDIR)$(prefix)/include/wx/ctb-0.13/$$f; \
	done

uninstall: uninstall_wxctb_lib uninstall_wxctb_dll
	for f in fifo.h getopt.h $(GPIBINC) iobase.h linux/serport.h linux/timer.h serport.h serportx.h timer.h; do \
	rm -f $(DESTDIR)$(prefix)/include/wx/ctb-0.13/$$f; \
	done

clean: 
	rm -f $(OUTPUT)/*.o
	rm -f $(OUTPUT)/*.d
	rm -f ../lib/libwxctb$(LIBFLAG)$(GPIBFLAG)-0.13.a
	rm -f ../lib/libwxctb$(LIBFLAG)$(GPIBFLAG)-0.13.so
	rm -f ../lib/libwxctb$(LIBFLAG)$(GPIBFLAG)-0.13.so
	rm -f $(OUTPUT)/ctbtest

tarball: 
	(cd ../..; tar -cvzf libwxctb-0.13.tar.gz \
	libwxctb-0.13/build/ \
	libwxctb-0.13/docs/ \
	libwxctb-0.13/include \
	libwxctb-0.13/python \
	libwxctb-0.13/samples \
	libwxctb-0.13/src \
	libwxctb-0.13/lib/*.a \
	libwxctb-0.13/lib/*.lib \
	--exclude=release \
	--exclude=debug \
	--exclude=website \
	--exclude=*~ \
	--exclude=buildall* \
	--exclude=make.sh \
	--exclude=make.bat \
	--exclude=libwxctb-0.13.tar.gz \
	--exclude=*.ilk \
	--exclude=*.log \
	--exclude=*.o* \
	--exclude=*.pdb \
	--exclude=*.pyc \
	--exclude=.svn; mv libwxctb-0.13.tar.gz libwxctb-0.13/build )

../lib/libwxctb$(LIBFLAG)$(GPIBFLAG)-0.13.a: $(WXCTB_LIB_OBJECTS)
	rm -f $@
	$(AR) rcu $@ $(WXCTB_LIB_OBJECTS)
	$(RANLIB) $@

install_wxctb_lib: ../lib/libwxctb$(LIBFLAG)$(GPIBFLAG)-0.13.a
	$(INSTALL) -d $(DESTDIR)$(prefix)/lib
	$(INSTALL) -m 644 ../lib/libwxctb$(LIBFLAG)$(GPIBFLAG)-0.13.a $(DESTDIR)$(prefix)/lib

uninstall_wxctb_lib: 
	rm -f $(DESTDIR)$(prefix)/lib/libwxctb$(LIBFLAG)$(GPIBFLAG)-0.13.a

../lib/libwxctb$(LIBFLAG)$(GPIBFLAG)-0.13.so: $(WXCTB_DLL_OBJECTS)
	$(CXX) $(LINK_DLL_FLAGS) -fPIC -o $@ $(WXCTB_DLL_OBJECTS)  $(____DEBUG_1) -pthread -L../lib $(LDFLAGS)  -lpthread $(__SYSLIB2_p)

install_wxctb_dll: ../lib/libwxctb$(LIBFLAG)$(GPIBFLAG)-0.13.so
	$(INSTALL) -d $(DESTDIR)$(prefix)/lib
	$(INSTALL) -m 644 ../lib/libwxctb$(LIBFLAG)$(GPIBFLAG)-0.13.so $(DESTDIR)$(prefix)/lib
	install -c ../lib/libwxctb$(LIBFLAG)$(GPIBFLAG)-0.13.so $(DESTDIR)$(prefix)/lib

uninstall_wxctb_dll: 
	rm -f $(DESTDIR)$(prefix)/lib/libwxctb$(LIBFLAG)$(GPIBFLAG)-0.13.so
	rm -f $(DESTDIR)$(prefix)/lib/libwxctb$(LIBFLAG)$(GPIBFLAG)-0.13.so

$(OUTPUT)/ctbtest: $(CTBTEST_OBJECTS) ../lib/libwxctb$(LIBFLAG)$(GPIBFLAG)-0.13.a
	$(CXX) -o $@ $(CTBTEST_OBJECTS)  $(____DEBUG_1) -L../lib $(LDFLAGS)  ../lib/libwxctb$(LIBFLAG)$(GPIBFLAG)-0.13.a -lpthread $(__SYSLIB2_p)

tip-linux: 
	@echo " "
	@echo "================================================================"
	@echo " The building of wxctb is finished. On Linux you'll now"
	@echo " have to run (as root):"
	@echo " "
	@echo " make DEBUG=$(DEBUG) GPIB=$(GPIB) install"
	@echo " "
	@echo " to install the libraries in $(prefix)/lib"
	@echo " and the header files in $(prefix)/include/wx/ctb-0.13"
	@echo " "
	@echo " Don't forget to run ldconfig (also as root)"
	@echo " "
	@echo " wxctb comes with no guarantees and doesn't claim"
	@echo " to be suitable for any purpose."
	@echo "================================================================"
	@echo " "

