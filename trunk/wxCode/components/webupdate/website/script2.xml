<?xml version="1.0"?>
<!DOCTYPE webupdate SYSTEM "webupdate.dtd">
<!-- $Id$ -->

<webupdate>   

   <!-- our CORE package: we use this to deliver the sample binaries -->
   <package id="core">
      <latest-version importance="normal">1.5.0</latest-version>

      <latest-download>
	  
			<!-- use a simple ZIP -->
			<uri>file://e:/wxcode/components/webupdate/website/advanced-$(latest-version).zip</uri>
			<platform name="msw"/>	
			
			<actions>
				<extract file="$(thisfile)" where="$(newtempdir)"/>
				<run file="$(programdir)\replacer.exe" 
					args="--pid $(pid) --from $(newtempdir) --to $(programdir) --restart $(program)" 
					flags="ASYNC"/>
				<exit flags="RESTART,ASKUSER"/>
			</actions>
	  </latest-download>
   </package>
   
   
   
   <!-- our ADDON package -->
   <package id="addon">
	  <requires>core</requires>
      <latest-version importance="low">1.5.0</latest-version>      

	  <!-- a single download for all platforms -->
      <latest-download>
			<uri>file://e:/wxcode/components/webupdate/website/addon-$(latest-version).zip</uri>
			<platform name="any"/>	
			
			<actions>
				<extract file="$(thisfile)" where="$(programdir)"/>
			</actions>
	  </latest-download>
   </package>

</webupdate>
