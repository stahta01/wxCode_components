			<platform name="any"/>	
			
			<actions>
				<run cmd="$(mkdir)" args="$(programdir)//addon2" flags="SYNC" />
				<extract file="$(thisfile)" where="$(programdir)//addon2"/>
			</actions>
	  </latest-download>
   </package>
   

   <!-- our ADDON3 package -->
   <package id="addon3">
	  <requires>core</requires>
      <latest-version importance="low">1.5.0</latest-version>      

	  <!-- a single download for all platforms -->
      <latest-download>
			<uri>file://e:/wxcode/components/webupdate/website/addon3-$(latest-version).zip</uri>
			<platform name="any"/>	
			
			<actions>
				<run cmd="$(mkdir)" args="$(programdir)//addon3" flags="SYNC" />
				<extract file="$(thisfile)" where="$(programdir)//addon3"/>
			</actions>
	  </latest-download>
   </package>
   
</webupdate>
