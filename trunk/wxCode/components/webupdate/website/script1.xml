<?xml version="1.0"?>
<!DOCTYPE webupdate SYSTEM "webupdate.dtd">
<!-- $Id$ -->

<webupdate>

   <!-- our customized messages -->
   <msg-update-available>Some updates for $(appname) are available; don't miss them !</msg-update-available>
   <msg-update-notavailable>You have the most updated version of $(appname)...</msg-update-notavailable>
	 
   <!-- for an example of XML webupdate script with multiple packages see script2.xml -->
   <package id="simple">
      <latest-version importance="high">2.0.3</latest-version>
	  
	  <!-- our downloads (1 per platform) -->
      <latest-download>
			<uri>http://easynews.dl.sourceforge.net/sourceforge/mathstudio/MathStudio-0.7.2.msi</uri>
			<platform name="msw"/>
			<md5>42e898d5f7d5bc1b359c80f02706d01e</md5>			
			<action>run</action>
	  </latest-download>
      <latest-download>
			<uri>http://wxcode.sourceforge.net/components/webupdate/myapp.tar.gz</uri>
			<platform name="gtk"/>
			<md5>42e898d5f7d5bc1b359c80f02706d01e</md5>			
			
			<action where="$(temp)">extract</action>
			<action file="$(temp)/replacer.exe" args="pid=$(pid) from=./* to=$(programroot)" flags="ASYNCH">run</action>
			<action>exit</action>
			
	  </latest-download>

	  <description>The package containing the binaries for the "WebUpdate simple sample program"... if you need
	  to show to the user a link to your changelog, then the right place is this: URLs like http://wxcode.sf.net are
	  automatically highlighted and made clickable...</description>

   </package>

</webupdate>
