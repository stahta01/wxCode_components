<?xml version="1.0"?>
<!DOCTYPE webupdate SYSTEM "webupdate.dtd">
<!-- $Id$ -->

<webupdate>

   <!-- our customized messages -->
   <msg-update-available>Some updates for "$(framename)" are available; don't miss them !</msg-update-available>
   <msg-update-notavailable>You have the most updated version of "$(framename)"...</msg-update-notavailable>
	 
   <!-- for an example of XML webupdate script with multiple packages see script2.xml -->
   <package id="simple">
      <latest-version importance="high">2.0.3</latest-version>
	  
	  <!-- our downloads (1 per platform) -->
      <latest-download>
	  
			<!-- use a simple ZIP -->
			<uri>http://wxcode.sourceforge.net/components/webupdate/simple-$(latest-version).zip</uri>
			<platform name="msw"/>	
			
			<action file="$(thisfile)" where="$(tempdir)">extract</action>
			<action file="$(programroot)\replacer.exe" args="pid=$(pid) from=. to=$(programroot)" flags="ASYNCH">run</action>
			<action>exit</action>

	  </latest-download>
      <latest-download>
	  
			<!-- on unix-base OS we use .tar.gz archives -->
			<uri>http://wxcode.sourceforge.net/components/webupdate/simple-$(latest-version).tar.gz</uri>
			<platform name="gtk"/>
			<action>run</action>
	  </latest-download>

	  <!-- description for this package; don't break lines or you'll get some empty spaces in the final description string -->
	  <description>The package containing the binaries for the "$(framename)"... if you need to show to the user a link to your changelog, then the right place is this: URLs like http://wxcode.sourceforge.net are automatically highlighted and made clickable...</description>
   </package>

</webupdate>
