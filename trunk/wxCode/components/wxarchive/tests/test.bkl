<?xml version="1.0" ?>
<!-- $Id: test.bkl,v 1.1 2004-11-27 23:55:10 chiclero Exp $ -->

<makefile>

    <include file="../../../build/bakefiles/common_samples.bkl"/>

    <exe id="test" template="wx_test_console"
                   template_append="wx_append_base">

        <set var="TESTDIR">../../../tests</set>

        <include>$(SRCDIR)/../include</include>
        <include>$(SRCDIR)/$(TESTDIR)</include>
        <include>$(SRCDIR)/$(TESTDIR)/archive</include>

        <if cond="WX_DISABLE_PRECOMP_HEADERS=='0'">
            <if cond="FORMAT!='autoconf' and TOOLKIT=='MSW'">
                <sources>$(TESTDIR)/dummy.cpp</sources>
                <precomp-headers-gen>$(TESTDIR)/dummy.cpp</precomp-headers-gen>
            </if>
            <precomp-headers-header>testprec.h</precomp-headers-header>
            <precomp-headers>on</precomp-headers>
            <precomp-headers-file>testprec_$(id)</precomp-headers-file>
        </if>

        <sources>
            $(TESTDIR)/test.cpp
            arctest.cpp
            tartest.cpp
            ../src/tarstrm.cpp
        </sources>
        
        <wx-lib>base</wx-lib>
    </exe>

</makefile>
