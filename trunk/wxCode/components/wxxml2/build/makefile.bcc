	$(CXX) -q -c -P -o$@ $(WXXML2_LIB_CXXFLAGS) $**

borland\wxxml2_lib_dtd.obj: .\..\src\dtd.cpp
	$(CXX) -q -c -P -o$@ $(WXXML2_LIB_CXXFLAGS) $**

