<makefile>
    <!-- IMPORTANT: we do NOT want to include wxWidgets presets here as they
                    would automatically include the "test_for_selected_wxbuild"
                    target which is undesired for libxml2 and libiconv because:

            1) such test has already been done by wxXml2's main makefiles
            2) we don't use the WX_* options here so that the test would fail
               because it would try to access invalid paths such as
               "$(WX_DIR)/lib/vc_$(WX_UNICODE)..."
    -->
    <include file="presets/utils.bkl"/>

    <option name="BUILD"/>
    <option name="SHARED"/>
    <option name="UNICODE"/>
    <option name="ICONV_DIR"/>
    <force-opt-presence id="BUILD"/>
    <force-opt-presence id="SHARED"/>
    <force-opt-presence id="UNICODE"/>
    <force-opt-presence id="ICONV_DIR"/>

    <subproject id="libiconv">
        <dependency-of>all</dependency-of>
        <dir>../libiconv/build</dir>
    </subproject>
    <subproject id="libxml2">
        <dependency-of>all</dependency-of>
        <dir>../libxml2/build</dir>
        <target>libonly</target>
    </subproject>

</makefile>
